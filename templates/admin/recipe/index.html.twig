{% block body %}

<div class="example-wrapper">
    <h1>Hello ! âœ…</h1>

    <a class="btn btn-primary btn-sm mb-2" href="{{ path('admin.recipe.create') }}"> Creer ta recette</a>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th style="width: 200px">Actions</th>

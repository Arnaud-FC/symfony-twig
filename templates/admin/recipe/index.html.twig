                    <form action="{{ path('admin.recipe.delete', {id: recipe.id}) }}", method= "post" >   <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm"> Supprimer </button>
                    </form>
                </div>

            </td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
